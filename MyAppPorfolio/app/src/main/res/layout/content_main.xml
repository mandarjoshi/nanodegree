<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DDEAF2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gandivainc.myappporfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/main_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textColor="#7D8B98"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/main_app1_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/SPOTIFY_STEAMER"
        android:layout_below="@id/main_title_text"
        android:onClick="launchSpotifySteamer"
        style="@style/LaunchAppButton"/>
    <Button
        android:id="@+id/main_app2_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/SCORES_APP"
        android:layout_below="@id/main_app1_btn"
        android:onClick="launchScoresApp"
        style="@style/LaunchAppButton"/>
    <Button
        android:id="@+id/main_app3_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/LIBRARY_APP"
        android:layout_below="@id/main_app2_btn"
        android:onClick="launchLibraryApp"
        style="@style/LaunchAppButton"/>
    <Button
        android:id="@+id/main_app4_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/BUILD_IT_BIGGER"
        android:layout_below="@id/main_app3_btn"
        android:onClick="launchBuilditBigger"
        style="@style/LaunchAppButton"/>
    <Button
        android:id="@+id/main_app5_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/XYZ_READER"
        android:layout_below="@id/main_app4_btn"
        android:onClick="launchXyzReader"
        style="@style/LaunchAppButton"/>
    <Button
        android:id="@+id/main_app6_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/CAPSTONE_MY_OWN_APP"
        android:layout_below="@id/main_app5_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="launchMyOwnApp"
        android:textColor="#FFFFFF"
        android:textSize="12dp"
        android:layout_margin="2dp"
        android:background="#D50000"/>

</RelativeLayout>
